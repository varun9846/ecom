  .chat-history {
    height: 84vh;
    overflow-y: auto;
    scroll-behavior: smooth;
  }
  
  .chat-history p {
    /* margin: 10px 20px;
     */
    padding: 10px 40px;
  }
  
  .chat-history p:nth-of-type(even) {
    background-color: rgb(68, 70, 84);
  }
  
  
  .my-form {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 80px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    /* background-color: rgb(68, 70, 84); */
    border-radius: 10px 10px 0 0;
    padding: 20px;
    
  }
  
  .my-form form{
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    padding: 20px;
    margin: 20px;
    width: 600px;
  }
  
  input[type="text"] {
    width: 60%;
    padding: 10px;
    border: none;
    border-radius: 5px;
    background-color: #333;
    font-size: 16px;
    margin-bottom: 10px;
    color: #fff;
    box-shadow: 0 2px 4px rgba(255,255,255,0.1);
  }
  
  input[type="text"]:focus {
    outline: none;
    box-shadow: 0 2px 4px rgba(255,255,255,0.2);
  }
  
  input[type="submit"] {
    position: relative;
    border: none;
    border-radius: 5px;
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
    top: -4px;
  }
  
  input[type="submit"]:hover {
