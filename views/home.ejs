</head>
<!-- //ejs is extension which includes both html and javaascript  -->
<body>



  <div class="chat-history">

    <% for( let chat of chats){ %>                
    <p class="text-bg-success">
      <%= chat.content %>
    </p>
    <hr>
    <% } %>   
  </div>

  <div class="my-form">

    <form action="ask-gpt" method="post">

      <input type="text" name="question" id="" placeholder="Enter your question here" />
      <input type="submit" value="Ask Question">

    </form>
  </div>


  <script>
    // get the chat history element
    const chatHistory = document.querySelector('.chat-history');
                                                                                
    // scroll to the bottom of the chat history
    chatHistory.scrollTop = chatHistory.scrollHeight;
  </script>
</body>

</html>