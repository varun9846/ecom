  <title>
    <%= title %>
  </title>
  <style>
    * {
    margin: 0;
    padding: 0;
    background-color: rgb(53, 54, 64);
    color: white;
    border: 0;
    font-size: 1.1rem;
    font-family: sans-serif;
  }
  
